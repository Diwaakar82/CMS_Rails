<div class="comment-form">
    <h2>Edit Category</h2>

    <%= form_with(model: @category, local: true) do |form| %>
        <div class="form-group">
            <%= form.label :title %><br>
            <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="button-container">
            <%= form.submit "Submit", class:"like-button" %>
        </div>
    <% end %>
</div>